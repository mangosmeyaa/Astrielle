<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="styles.css">
    <title>Browse Page</title>
  </head>

    <body>
    {% include "components/navbar.html.jinja" %}
    <br>
 <h1 class="text-3xl text-center">Our Products!</h1>
 <br>
        <main class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 p-5">
            {% for x in products %}
                <a href="/product/{{x['ID']}}" class="bg-[#f8f9fa] rounded-xl shadow hover:shadow-lg transition p-2">
                    
                    <!-- Product Image -->
                    <div class="w-full aspect-square overflow-hidden rounded-lg">
                        <img 
                            src="{{ x['Image'] }}" 
                            alt="{{ x['Name'] }}" 
                            class="w-full h-full object-cover"
                        >
                    </div>

                    <!-- Product Info -->
                    <div class="mt-4 space-y-1">

                        <h3 class="text-lg font-semibold text-gray-800 line-clamp-1">
                            {{ x["Name"] }}
                        </h3>

                        <p class="text-xl font-bold text-gray-900">
                            Â¥{{ x["Price"] }}
                        </p>

                        <p class="text-sm text-gray-500">
                            {{ x["Category"] }}
                        </p>
                    </div>

                </a>
            {% endfor %}
        </main>
    
</body>

  
</html>