<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="styles.css">
    <title>Browse Page</title>

  </head>
    <body>
    {% include "components/navbar.html.jinja" %}
     
{% for x in products %}

  <a href="/product/{{ x ['ID']}}" class="grid bg-stone-300 rounded-lg mt-3"> 

<div class="bg-gray-200 p-8 min-h-screen">
  <h2 class="text-2xl font-bold mb-6 text-gray-800">Browse Products</h2>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
      <div class="h-64 bg-gray-50 flex items-center justify-center border-b border-gray-100">
        <img src=static/products/pink_candle(1).png"> span class="text-gray-400">Product Image</span>
      </div>
      <div class="p-4">
        <h3 class="font-bold text-lg text-gray-900">Green Apple Bliss</h3>
        <p class="text-sm text-gray-600 mt-1">Diptyque candle with fresh green apple scent.</p>
        <div class="mt-4 flex items-center justify-between">
          <span class="text-xl font-bold text-gray-900">$15</span>
          <button class="bg-[#E8A0B5] hover:bg-[#d68fa3] text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
            Add to Cart
          </button>
        </div>
      </div>
    </div>

    </div>
</div>

  </a>
  {% endfor %}
    </body>
</html>