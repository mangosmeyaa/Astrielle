<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="styles.css">
    <title>Browse Page</title>

  </head>
    <body>
    {% include "components/navbar.html.jinja" %}
     
{% for x in products %}

  <a href="/product/{{ x ['ID']}}" class="grid bg-stone-300 rounded-lg mt-3"> 
  
    <img class="h- mx-auto rounded-lg mt-3" src="{{ x ['Image'] }} "> <br>

    <div class="pl-3 font-bold text-sm">{{ x ["Name"]}} </div>

    <div class="text-right font-bold text-sm pb-3 pr-3"> ${{ x ["Price"]}} </div>


  </a>
  {% endfor %}
    </body>
</html>