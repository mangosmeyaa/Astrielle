    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
      {% include "components/navbar.html.jinja" %}

 <!-- Hero Section -->
 <br>
  <section class="bg-[#FF8FAB] py-16 text-center">
    <h2 class="text-4xl font-semibold text-gray-800">Welcome to Your Candle Shop</h2>
    <p class="text-xl mt-4 text-gray-700">Transform your space with our sweet and soothing scents.</p>
  </section>

  <!-- Featured Product Section -->
  <section id="featured" class="bg-white py-16">
    <div class="max-w-7xl mx-auto text-center">
      <h3 class="text-3xl font-semibold text-pink-500 mb-8">Featured Product</h3>
      
      <div class="flex justify-center items-center space-x-8">
        <div class="w-72 h-72 bg-gray-200 rounded-lg shadow-lg">
          <!-- Product Image Here -->
          <img src="path_to_your_image.jpg" alt="Sugar Petal Delight" class="object-cover w-full h-full rounded-lg">
        </div>
        
        <div class="w-1/2">
          <h4 class="text-2xl font-semibold text-gray-800">Sugar Petal Delight</h4>
          <p class="text-xl text-gray-600 mt-4">Transform your space with the sweet, soothing scent of Sugar Petal Delight. A floral bliss in every flicker!</p>
          <p class="text-lg font-semibold text-pink-600 mt-4">$15</p>
          <button class="mt-6 px-6 py-2 bg-pink-500 text-white rounded-full shadow-md hover:bg-pink-400 transition duration-300">Add to Cart</button>
        </div>
      </div>
    </div>
  </section>



