<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="styles.css">
  </head>

  <body>
    {% include "components/navbar.html.jinja" %}

    <div class="min-h-screen flex items-center justify-center bg-[#f6eee8] px-8">
      <div class="w-full max-w-7xl bg-[#f6eee8] grid grid-cols-1 md:grid-cols-2 gap-16 items-center">

        <!-- Product Image -->
        <div class="h-[500px] bg-[#f0e6de] rounded-3xl flex items-center justify-center">
        <img 
                        src= "{{ product ['Image'] }}" 
                        alt= "{{ product ['Name'] }}"
                        class="w-full h-full object-cover"
                        >

        </div>

        <!-- Product Content -->
        <div class="space-y-8">

          <h1 class="text-5xl font-semibold text-gray-800">
            {{ product["Name"] }}
          </h1>

          <p class="text-3xl font-medium text-green-700">
            Â¥{{ product["Price"] }}
          </p>

          <p class/="text-lg text-gray-600 max-w-xl">
            {{product["Description"]}}
          </p>

          <!-- Quantity & Cart -->
          <form
            method="post"
            action="/product/{{product['ID']}}/add_to_cart"
            class="flex items-center gap-6 pt-6"
          >

            <!-- Quantity -->
            <div class="flex items-center border border-gray-300 rounded-xl overflow-hidden">
              <input
                type="number"
                name="qty"
                value="1"
                min="1"
                max="20"
                class="w-24 text-center text-xl py-4 outline-none bg-transparent"
              />
            </div>

            <!-- Add to Cart -->
            <button
              type="submit"
              class="bg-green-700 hover:bg-green-800 text-white text-lg px-10 py-4 rounded-xl transition"
            >
              Add to Cart
            </button>

{# Review form #}
<form method="post" action="/product['ID']}}/review">
<label>Rating</label>
<input name="rating" input type="number" min="1" max="5">
<label>Comments</label>
<textarea></textarea><br>
<button type="submit">Submit</button>
          </form>

        </div>
      </div>
    </div>

  </body>
</html>
