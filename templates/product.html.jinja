<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="styles.css">
  </head>
    <body>
    
{% include "components/navbar.html.jinja"%}
<img class="mx-auto" img src="/static/products/green_candle(4).png">

<h1> {{ product['Name'] }}</h1>
<h1> {{ product["Price"] }}</h1>
<form method="post" action="/product{{ product['ID']}}/add_to_cart">

 <!-- PAGE CONTAINER -->
    <div class="max-w-7xl mx-auto px-6 py-10">

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">

        <!-- LEFT: Product Image -->
        <div class="lg:col-span-4 flex justify-center">
          <img 
            src="{{ product['Image'] }}" 
            alt="{{ product['Name'] }}"
            class="rounded-xl shadow-lg max-w-sm w-full border-4 border-purple-200"
          />
        </div>

        <!-- MIDDLE: Product Info -->
        <div class="lg:col-span-5 space-y-4">

          <!-- Name -->
          <h1 class="text-3xl font-bold text-purple-900">
            {{ product["Name"] }}
          </h1>

          <hr class="border-purple-200">

          <!-- Price -->
          <p class="text-3xl text-purple-700 font-extrabold">
            ${{ product["Price"] }}
          </p>

          <!-- Description -->
          <p class="text-neutral-700 text-lg leading-relaxed">
            {{ product["Description"] }}
          </p>

        </div>

        <!-- RIGHT: Add to Cart Box -->
        <div class="lg:col-span-3">
          <div class="bg-white p-6 rounded-xl shadow-md border border-purple-200 space-y-6">

            <!-- Price repeated (Amazon-style) -->
            <p class="text-3xl text-purple-700 font-bold">
              ${{ product["Price"] }}
            </p>

            <!-- Add to Cart -->
            <form method = "post" action="/product/{{ product['ID']}}/add_to_cart" >
                <label> Qty:</label>
                <input name="Qty" type="number" value="1" min="1" max="20">
                <button 
                class="w-full py-3 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-xl shadow transition">
                Add to Cart
                </button>
            </form>
<label>Qty:</label>
<input type="number" name="qty" value="1" min="1" max="5">
</form>
  </body>
</html>