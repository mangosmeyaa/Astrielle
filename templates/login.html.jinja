<!doctype html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>Login | Astrielle</title>
</head>
<body class="bg-[#fdfdf0] flex flex-col min-h-screen text-[#4a443f]">
  {% include "components/navbar.html.jinja"%}

  <div class="flex-grow flex items-center justify-center p-6">
    <div class="bg-white p-10 rounded-2xl shadow-sm border border-[#ecebd1] w-full max-w-md">
      
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold mb-2 tracking-tight">Astrielle</h1>
        <div class="h-1 w-12 bg-[#d98096] mx-auto rounded-full"></div>
        <p class="mt-4 text-gray-500 italic">Welcome back, friend!</p>
      </div>

      {%for message in get_flashed_messages()%}
        <div class="bg-red-50 text-red-600 p-3 rounded-lg mb-4 text-sm text-center">{{message}}</div>
      {%endfor%}
    
      <form class="space-y-5" method="post" onsubmit="return checkPasswords()">
        <div>
          <label class="block text-sm font-semibold mb-1">Email</label>
          <input required type="email" name="email" placeholder="heart@astrielle.com"
                 class="w-full px-4 py-3 bg-[#fdfdfb] border border-[#ecebd1] rounded-xl focus:outline-none focus:ring-2 focus:ring-[#d98096]/30 focus:border-[#d98096] transition-all">
        </div>

        <div>
          <label class="block text-sm font-semibold mb-1">Password</label>
          <input required type="password" id="password" name="password" placeholder="••••••••"
                 class="w-full px-4 py-3 bg-[#fdfdfb] border border-[#ecebd1] rounded-xl focus:outline-none focus:ring-2 focus:ring-[#d98096]/30 focus:border-[#d98096] transition-all">
        </div>

        <div>
          <label class="block text-sm font-semibold mb-1">Confirm Password</label>
          <input required type="password" id="confirm_password" name="confirm_password" placeholder="••••••••"
                 class="w-full px-4 py-3 bg-[#fdfdfb] border border-[#ecebd1] rounded-xl focus:outline-none focus:ring-2 focus:ring-[#d98096]/30 focus:border-[#d98096] transition-all">
        </div>

        <button type="submit" 
                class="w-full bg-[#d98096] text-white py-3 rounded-xl hover:bg-[#c66e83] transition-colors font-bold shadow-md shadow-pink-100 mt-2">
          Login
        </button>
      </form>

      <p class="text-center text-sm text-gray-500 mt-8">
        New to the magic? <a href="/signup" class="text-[#d98096] font-bold hover:underline">Create an account</a>
      </p>
    </div>
  </div>

  <script>
    function checkPasswords() {
      const password = document.getElementById('password').value;
      const confirm = document.getElementById('confirm_password').value;
      if (password !== confirm) {
        alert("Passwords do not match!");
        return false; 
      return true; 
    }
  </script>
</body>
</html>
